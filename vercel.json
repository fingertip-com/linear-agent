{
  "version": 2,
  "builds": [{ "src": "api/*.ts", "use": "@vercel/node" }],
  "rewrites": [
    { "source": "/", "destination": "/api/index" },
    { "source": "/auth", "destination": "/api/auth" },
    { "source": "/webhook", "destination": "/api/webhook" },
    { "source": "/oauth/callback", "destination": "/api/callback" }
  ]
}
